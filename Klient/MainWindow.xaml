<Window x:Class="Klient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klient"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lista" Margin="10" SelectionChanged="lista_SelectionChanged"/>
        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Nazwa zadania" Margin="0,40,0,0"/>
            <TextBox x:Name="name"/>
            <Label Content="Opis zadania" Margin="0,20,0,0"/>
            <TextBox x:Name="des" Height="200"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="add" Content="Dodaj nowy" Width="140" Height="25" Click="add_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="refresh" Content="Odśwież" Width="140" Height="25" Click="refresh_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
